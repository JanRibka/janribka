{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",
  "types": ["node", "react"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2023",
    "lib": ["ES2020", "DOM"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "types": ["node", "react"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": false,
    "paths": {
      "@janribka-components": ["./packages/janribka-components/src"],
      "@janribka-types": ["./packages/janribka-types"]
    }
  },
  "exclude": ["**/.*/", "**/build", "**/node_modules"]
}
